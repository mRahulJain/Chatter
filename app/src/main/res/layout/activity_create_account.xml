<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ececec"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Activities.CreateAccountAct">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/gradient_create_account"
        android:layout_gravity="center"
        android:gravity="bottom|center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:src="@drawable/chat"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/black"
            android:text="Connect via Social Accounts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingBottom="14dp"
                android:paddingLeft="10dp"
                android:layout_marginBottom="30dp"
                android:paddingRight="10dp"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:paddingTop="14dp"
                android:layout_gravity="center|bottom"
                android:id="@+id/reqGoogle"
                android:src="@drawable/search"
                android:textAllCaps="false"
                android:background="#1D2F3A"
                android:layout_width="80dp"
                android:layout_height="50dp"/>
            <com.facebook.login.widget.LoginButton
                xmlns:facebook="http://schemas.android.com/apk/res-auto"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/reqFacebook"
                android:paddingLeft="33dp"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:paddingBottom="16dp"
                android:textColor="@android:color/white"
                android:paddingTop="16dp"
                android:layout_gravity="center|bottom"
                facebook:com_facebook_login_text=""
                facebook:com_facebook_logout_text=""
                android:textAllCaps="false"
                android:background="#3b5998"
                android:layout_width="80dp"
                android:layout_height="50dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:text="Or"
            android:textColor="@android:color/black"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:drawableLeft="@drawable/ic_phone_android"
            android:drawablePadding="6dp"
            android:padding="8dp"
            android:layout_gravity="center"
            android:id="@+id/reqPhone"
            android:textAllCaps="false"
            android:background="@drawable/background_ca_button"
            android:layout_marginBottom="10dp"
            android:text="Create Account via Mobile Number"
            android:layout_width="290dp"
            android:layout_height="wrap_content"/>
        <Button
            android:drawableLeft="@drawable/ic_mail"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:drawablePadding="6dp"
            android:id="@+id/reqMail"
            android:padding="8dp"
            android:background="@drawable/background_ca_button"
            android:text="Create Account via Email ID"
            android:layout_width="290dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:textSize="10sp"
        android:layout_marginBottom="4dp"
        android:textColor="@android:color/black"
        android:text="By continuing, you agree to our Terms &amp; Privacy Policy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>